{
  "name": "Mandrake Item Tracker",
  "version": "0.94",
  "author": "Andy Nguyen",
  "manifest_version": 2,
  "description": "Track ekizo.mandarake.co.jp for figure listings.",
  "options_page": "options.html",
  "icons": {
    "128": "img/icon_128.png",
    "64": "img/icon_64.png"
  },
	"browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Mandrake Item Tracker"
  },
 
  "background": {
    "scripts":["js/jquery-2.0.3.min.js","js/parser.js", "js/background.js"]
  },
  "permissions": ["storage", "tabs", "http://ekizo.mandarake.co.jp/*"],
  "offline_enabled": false,
  "minimum_chrome_version": "20"
}